package com.management.utils;

import java.util.Scanner;

public class InputUtil {
	
	static Scanner sc=new Scanner(System.in);
	
	public static String getStringInput(String prompt) {
		System.out.println(prompt);
		try {
			String input=sc.next();
			return input;
		}catch (Exception e) {
			System.err.println("Inavalid Input Enter in String");

			return e.getMessage();
		}
		
		
	}
	
	public static int getIntegerInput(String prompt) {
		System.out.println(prompt);
		try {
			int input=sc.nextInt();
			return input;
		}catch (Exception e) {
			System.err.println("Invalid input enter in Integer");
			return 0;
		}
		
		
	}
	
	public static double getIntegerInput(String prompt) {
		System.out.println(prompt);
		try {
			double input=sc.nextInt();
			return input;
		}catch (Exception e) {
			System.err.println("Invalid input enter in integer or double");
			return 0;
		}
		
		
	}


}
